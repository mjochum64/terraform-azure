{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Login into Azure Cloud",
            "type": "shell",
            "command": "az login --use-device-code",
            "problemMatcher": []
        },
        {
            "label": "Format terraform code",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "terraform",
            "problemMatcher": [],
            "args": [
                "fmt",
                "--recursive"
            ]
        },
        {
            "label": "Plan Terraform code",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "terraform plan -out tf.plan",
            "problemMatcher": []
        },
        {
            "label": "Create markdown plan",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "terraform show -json tf.plan|terraform-j2md>plan.md",
            "problemMatcher": []
        }
    ]
}